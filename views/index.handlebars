<div class="jumbotron text-center">
    <h1 class="title">Eat-Da-Burger</h1>
    {{!-- <img style="text-align:center" id="burgerImg" src="./assets/img/burger2.jpeg"> --}}
</div>

<div class="row">
  <div class="col-sm-6 text-center"  id="notEaten">
    <h2>Burgers Not Eaten!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{burger_name}}{{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-sm-6 text-center" id="eaten">
    <h2>Burgers Devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{burger_name}}{{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>   

<h2 class="title-add">Add A Burger</h2>
<hr>
<form class="create-form">
    <div class="form-group">
      <label for="bu" id="name-label">Burger Name:</label>
      <input type="text" id="burger-name" name="name" placeholder="enter burger">
    </div>

   <button type="submit" id="submitBtn">Add Burger</button>
</form>

<footer class="footer text-center">
  <p><a href="https://github.com/jgohbb/burger" target="_blank"> GitHub repo </a></p>
</footer>
